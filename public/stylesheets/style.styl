*
	-moz-box-sizing: border-box
	-webkit-box-sizing: border-box
	box-sizing: border-box
	position: relative

body
	font-family: 'Segoe UI', Ubuntu, 'Helvetica Neue', Helvetica, Verdana, Sans-Serif
a
	color: #00B7FF
h1, h2, h3
	font-weight: normal

#sample-log-message-form
	input[type='text'], textarea
		width: 300px
	textarea
		height: 150px

#log-message-list
	list-style-type: none
	margin: 0
	overflow: hidden
	padding: 0
	white-space: nowrap

	.log-message
		padding: 2px 10px
		overflow: hidden
		white-space: nowrap

		&:hover
			background: #fafafa
			cursor: pointer

		.field
			float: left
			margin: 0 10px 0 0
			overflow: hidden
			white-space: nowrap

		.server-timestamp
			width: 20%
		.application
			width: 10%
		.severity
			width: 5%
		.host
			width: 7%
		.context
			width: 10%
		.message
			overflow: hidden
			text-overflow: ellipsis
			width: 40%
